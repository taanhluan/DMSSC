// server/prisma/schema.prisma

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Task {
  id          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  sr          String
  title       String?
  description String?
  site        String?
  pic         String?
  status      String   @default("NEW")
  priority    String?
  startDate   DateTime?
  endDate     DateTime?
  hours       Int?     @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Backlog {
  id          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  site        String?
  sr          String
  description String?
  owner       String?
  priority    String?
  startDate   DateTime?
  endDate     DateTime?
  status      String   @default("NEW")
  onOff       String?  @default("ON")
  progress    Int?     @default(0)
  complex     String?
  tracks      Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
